{
  "name": "setup-prettier",
  "version": "1.0.0",
  "description": "An example of how to setup prettier in a project",
  "main": "index.js",
  "author": "Thomas McGuire",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.+(js|md|ts|css|sass|less|graphql|yml|yaml|scss|json|vue)\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.2",
    "prettier": "^2.0.4"
  }
}
